import {ModuleController} from 'lib';
import {<%= lowerModel %>Rest} from 'rest';

export default class <%= upperModel %>ManagerController extends ModuleController{
	constructor(){
		super('<%= snakeModel %>/<%= snakeView %>');
	}

	public async pull(){
		this.$scope.<%= lowerModels %> = await <%= lowerModel %>Rest.index();
	}

	public async sync(){
		await this.pull();
		this.render();
	}

	public async init(){
		this.$scope.<%= snakeModels %> = await <%= lowerModel %>Rest.index({
			user_id: PaperX.auth.userId()
		});

		await super.init();
	}
}
